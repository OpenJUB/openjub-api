<!doctype html>
<html>
<head>
  <title>OpenJUB LogIn</title>
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css" />
</head>
<body style="padding: 2rem;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div style="width:150px; margin-left:auto; margin-right:auto;">
        <img src="/images/logo_small.png" alt="OpenJUB" title="OpenJUB" width="100%">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form class="form-horizontal" role="form" action="/auth" method="POST">
        <div class="form-group">
          <label for="inputUsername" class="col-sm-2 control-label">
            CampusNet Username
          </label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="username" id="inputUsername" placeholder="Username">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword" class="col-sm-2 control-label">
            Password
          </label>
          <div class="col-sm-10">
            <input type="password" class="form-control" name="password" id="inputPassword" placeholder="Password">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-sm btn-block">
              Log In via OpenJUB
            </button>
          </div>
        </div>
        <input type="hidden" value="<%= client_id %>" name="client_id">
        <input type="hidden" value="<%= response_type %>" name="response_type">
        <input type="hidden" value="<%= redirect_uri %>" name="redirect_uri">
      </form>
    </div>
  </div>
</body>
</html>
